# For configuration options and examples, please see:
# https://gethomepage.dev/configs/info-widgets/

# - resources:
#       cpu: true
#       memory: true
#       disk: /

- datetime:
      text_size: xl
      format:
          dateStyle: long
          timeStyle: short
          hour12: true

# - search:
#     provider: google # google, duckduckgo, bing, baidu, brave or custom
#     focus: true # Optional, will set focus to the search bar on page load
#     showSearchSuggestions: true # Optional, will show search suggestions. Defaults to false
#     target: _blank # One of _self, _blank, _parent or _top

- search:
    provider: custom
    url: {{ searxng.url }}/search?q=
    target: _blank
    suggestionUrl: {{ searxng.url }}/autocomplete?type=list&q= # Optional
    showSearchSuggestions: true # Optional

- openmeteo:
      label: Adelaide # optional
      latitude: {{ homelab.latitude | default(0.0) }}
      longitude: {{ homelab.longitude | default(0.0) }}
      timezone: {{ homelab.timezone | default(omit) }}
      units: metric # or imperial
      cache: 15 # Time in minutes to cache API responses, to stay within limits

- unifi_console:
      url: {{ unifi_console.url | default('dummy') }}
      username: {{ unifi_console.username | default('dummy') }}
      password: {{ unifi_console.password | default('dummy') }}
