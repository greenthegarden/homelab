---
global:
  scrape_interval:     10s # The default scrape interval is every 10 seconds.
  evaluation_interval: 10s # The default evaluation interval is every 10 seconds.
  # On this machine, every time series will be exported by default.

scrape_configs:

  #### MONITORING SERVICES
  - job_name: {{ node_exporter_service_name | default('node-exporter') }}
    scheme: https
    scrape_interval: 5s
    metrics_path: /metrics
    static_configs:
      - targets: [{{ node_exporter_service_name | default('node-exporter') }}]
    tls_config:
      insecure_skip_verify: true
  - job_name: {{ prometheus_service_name | default('prometheus') }}
    scheme: https
    scrape_interval: 5s
    static_configs:
      - targets: [{{ prometheus_service_name | default('prometheus') }}]
    tls_config:
      insecure_skip_verify: true
  - job_name: {{ traefik_service_name | default('traefik') }}
    scheme: https
    scrape_interval: 5s
    metrics_path: /metrics
    static_configs:
      - targets: [{{ traefik_service_name | default('traefik') }}]
    tls_config:
      insecure_skip_verify: true

  - job_name: node
    scheme: https
    scrape_interval: 15s
    honor_labels: true
    metrics_path: "/federate"
    params:
      "match[]":
        - '{job="prometheus"}'
        - '{__name__=~"job:.*"}'
    static_configs:
      - targets:
          - "prometheus.broker.{{ lan_domain }}"
          - "prometheus.frigate.{{ lan_domain }}"
          - "prometheus.homepage.{{ lan_domain }}"
          # - "prometheus.influxdb.{{ lan_domain }}"
          - "prometheus.portainer.{{ lan_domain }}"
          - "prometheus.uptimekuma.{{ lan_domain }}"
          - "prometheus.vaultwarden.{{ lan_domain }}"
          - "prometheus.whatsupdocker.{{ lan_domain }}"
    tls_config:
      insecure_skip_verify: true
