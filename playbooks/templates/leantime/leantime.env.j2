PUID=1000
PGID=1000

LEAN_PORT = '8080'
LEAN_APP_URL = https://{{ leantime_fqdn }}
LEAN_APP_DIR = ''

LEAN_DEBUG = 0

# Database - MySQL container
MYSQL_ROOT_PASSWORD = {{ leantime.mysql_root_password }}
MYSQL_DATABASE = {{ leantime.mysql_database }}
MYSQL_USER = {{ leantime.mysql_user }}
